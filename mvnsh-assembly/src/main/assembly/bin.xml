<assembly>
    <id>bin</id>

    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>src/main/underlay</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.txt</include>
                <include>etc/**</include>
                <include>examples/**</include>
                <include>scripts/**</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>src/main/underlay/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>mvnsh.bat</include>
                <include>mvn.bat</include>
            </includes>
            <lineEnding>dos</lineEnding>
        </fileSet>

        <fileSet>
            <directory>src/main/underlay/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>mvnsh</include>
                <include>mvn</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>target/mvnsh-bootstrap.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>bootstrap.jar</destName>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <excludes>
                <exclude>org.sonatype.gshell:gshell-bootstrap</exclude>
                <exclude>org.sonatype.maven.shell:mvnsh-assembly</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
