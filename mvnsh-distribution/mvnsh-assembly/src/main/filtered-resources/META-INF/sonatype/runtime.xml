            </car>
        </cars>

        <itars>
            <itar>
                <groupId>org.sonatype.maven.shell.dist</groupId>
                <artifactId>mvnsh-itar</artifactId>
                <version>${project.version}</version>
                <type>jar</type>
            </itar>
        </itars>
    </assembly>

</assemblies>