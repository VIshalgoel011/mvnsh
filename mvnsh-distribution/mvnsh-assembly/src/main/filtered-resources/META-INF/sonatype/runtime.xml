<assemblies>

    <assembly>
        <description>Maven Shell</description>

        <properties>
            <appName>mvnsh</appName>
            <appVersion>${project.version}</appVersion>
            <runtimeDir>${appName}-${appVersion}</runtimeDir>
        </properties>

        <bar>
            <groupId>org.sonatype.maven.shell</groupId>
            <artifactId>mvnsh-bar</artifactId>
            <version>${project.version}</version>
            <type>jar</type>
        </bar>

        <cars>
            <car>
                <groupId>org.sonatype.maven.shell</groupId>
                <artifactId>mvnsh-car</artifactId>
                <version>${project.version}</version>
                <type>jar</type>
            </car>
        </cars>

        <itars>
            <itar>
                <groupId>org.sonatype.maven.shell</groupId>
                <artifactId>mvnsh-itar</artifactId>
                <version>${project.version}</version>
                <type>jar</type>
                <properties>
                    <libraryDir>${runtimeDir}/lib</libraryDir>
                </properties>
            </itar>

            <itar>
                <groupId>org.sonatype.runtime.itars</groupId>
                <artifactId>itar-maven</artifactId>
                <version>3.0-alpha-7-v0001-SNAPSHOT</version>
                <type>zip</type>
                <properties>
                    <libraryDir>${runtimeDir}/lib</libraryDir>
                </properties>
            </itar>
            
            <itar>
                <groupId>org.sonatype.runtime.itars</groupId>
                <artifactId>itar-plexus-classworlds</artifactId>
                <version>2.2.2-v0001-SNAPSHOT</version>
                <type>zip</type>
                <properties>
                    <libraryDir>${runtimeDir}/lib</libraryDir>
                </properties>
            </itar>

            <itar>
                <groupId>org.sonatype.runtime.itars</groupId>
                <artifactId>itar-plexus-container-default</artifactId>
                <version>1.5.4-v0001-SNAPSHOT</version>
                <type>zip</type>
                <properties>
                    <libraryDir>${runtimeDir}/lib</libraryDir>
                </properties>
            </itar>
        </itars>
    </assembly>

</assemblies>